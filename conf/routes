GET		/playfairy/download/ipa		@com.playfairy.controllers.JDownloadController.ipa()
GET		/playfairy/download/plist	@com.playfairy.controllers.JDownloadController.plist(id: String?="0")

GET		/playfairy/upload/index		@com.playfairy.controllers.JUploadController.index()
POST	/playfairy/upload/ipa		@com.playfairy.controllers.JUploadController.ipa()
GET		/playfairy/upload/genplist	@com.playfairy.controllers.JUploadController.genplist(id: String?="0")

GET		/playfairy/signup/index		@com.playfairy.controllers.SignupController.index()
POST	/playfairy/signup/create	@com.playfairy.controllers.SignupController.create()

GET		/playfairy/login/index		@com.playfairy.controllers.LoginController.index()
POST	/playfairy/login/login		@com.playfairy.controllers.LoginController.login()
GET		/playfairy/login/logout		@com.playfairy.controllers.LoginController.logout()

GET		/playfairy/project/index	@com.playfairy.controllers.ProjectController.index()
POST	/playfairy/project/create	@com.playfairy.controllers.ProjectController.create()
GET		/playfairy/project/addversion	@com.playfairy.controllers.ProjectController.get_addversion()
POST	/playfairy/project/addversion	@com.playfairy.controllers.ProjectController.post_addversion()

GET		/playfairy/build/index		@com.playfairy.controllers.BuildController.index()
POST	/playfairy/build/create		@com.playfairy.controllers.BuildController.create()

