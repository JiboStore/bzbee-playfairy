# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
#GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public-deadbolt", file)

#GET     /playfairy/download         controllers.HomeController.index()
GET		/playfairy/download/test	com.playfairy.controllers.DownloadController.test()
GET		/playfairy/download/hardcoded	com.playfairy.controllers.DownloadController.hardcoded()
GET		/playfairy/download/index	com.playfairy.controllers.DownloadController.index()
GET		/playfairy/download/ipa		com.playfairy.controllers.DownloadController.ipa()
GET		/playfairy/download/plist	com.playfairy.controllers.DownloadController.plist(id: String?="0")

GET		/playfairy/upload/index		com.playfairy.controllers.UploadController.index()
POST	/playfairy/upload/ipa		com.playfairy.controllers.UploadController.ipa()
GET		/playfairy/upload/genplist	com.playfairy.controllers.UploadController.genplist(id: String?="0")

GET		/playfairy/signup/index		com.playfairy.controllers.SignupController.index()
POST	/playfairy/signup/create	com.playfairy.controllers.SignupController.create()

GET		/playfairy/project/index	com.playfairy.controllers.ProjectController.index()
POST	/playfairy/project/create	com.playfairy.controllers.ProjectController.create()
GET		/playfairy/project/addversion	com.playfairy.controllers.ProjectController.get_addversion()
POST	/playfairy/project/addversion	com.playfairy.controllers.ProjectController.post_addversion()

GET		/playfairy/build/index		com.playfairy.controllers.BuildController.index()
POST	/playfairy/build/create		com.playfairy.controllers.BuildController.create()

